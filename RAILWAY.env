# =====================================================
# RAILWAY BACKEND ENVIRONMENT VARIABLES
# =====================================================
# Import this file in Railway Dashboard ‚Üí Variables ‚Üí Raw Editor
# OR use: railway variables set --file RAILWAY.env

# =====================================================
# üîë API KEYS (REQUIRED - ADD YOUR KEYS HERE)
# =====================================================
OPENAI_API_KEY=sk-proj-YOUR-OPENAI-KEY-HERE
ANTHROPIC_API_KEY=sk-ant-api03-YOUR-ANTHROPIC-KEY-HERE

# =====================================================
# üìä ENFORCEMENT CONFIGURATION
# =====================================================
ENFORCEMENT_LEVEL=Balanced

# =====================================================
# üöÄ CACHING (70% cost savings)
# =====================================================
ENABLE_CACHE=true
ENABLE_SEMANTIC_CACHE=true
CACHE_VALIDATED_ONLY=true
USE_PROMPT_CACHING=true
CONSENSUS_THRESHOLD=90
CACHE_TTL_HOURS=24

# =====================================================
# ‚ö° PERFORMANCE & LIMITS
# =====================================================
VALIDATION_RATE=0.15
CONFIDENCE_THRESHOLD=95
MAX_CONCURRENT_DOCUMENTS=3
SKIP_GPT_CONFIDENCE_THRESHOLD=98
REQUEST_TIMEOUT_SECONDS=120
PIPELINE_TIMEOUT_SECONDS=600

# =====================================================
# üîí SECURITY & RATE LIMITING
# =====================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
MAX_FILE_SIZE_MB=10
MAX_REQUEST_SIZE_MB=20
ENABLE_CORS=true
# IMPORTANT: For production, specify exact domains for security
CORS_ORIGINS=https://edgetoolspro.com,https://www.edgetoolspro.com,https://nda-redline-tool.vercel.app,http://localhost:3000

# =====================================================
# üéØ PASS CONFIGURATION
# =====================================================
ENABLE_PASS_0=true
ENABLE_PASS_1=true
ENABLE_PASS_2=true
ENABLE_PASS_3=true
ENABLE_PASS_4=true

# =====================================================
# ü§ñ MODEL CONFIGURATION
# =====================================================
# GPT Configuration
GPT_MODEL=gpt-5
GPT_TEMPERATURE=0.1
GPT_MAX_TOKENS=2000

# Claude Sonnet Configuration
SONNET_MODEL=claude-3-5-sonnet-20241022
SONNET_TEMPERATURE=0.2
SONNET_MAX_TOKENS=1500

# Claude Opus Configuration
OPUS_MODEL=claude-3-opus-20240229
OPUS_TEMPERATURE=0.1
OPUS_MAX_TOKENS=2000
OPUS_CONFIDENCE_THRESHOLD=85
OPUS_BATCH_SIZE=5

# =====================================================
# üîß CONSISTENCY CHECK CONFIGURATION
# =====================================================
CONSISTENCY_CHECK_BANNED_TOKENS=true
CONSISTENCY_CHECK_REQUIRED_CLAUSES=true
CONSISTENCY_CHECK_STYLE=true

# =====================================================
# üìù LOGGING
# =====================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =====================================================
# üåê SERVER CONFIGURATION
# =====================================================
# Railway automatically sets PORT - this is just for reference
HOST=0.0.0.0
WORKERS=4
RELOAD=false
DEBUG=false

# =====================================================
# üìä MONITORING & TELEMETRY
# =====================================================
ENABLE_TELEMETRY=true
TELEMETRY_SAMPLE_RATE=1.0
ENABLE_MONITORING=true

# =====================================================
# üìÑ DOCUMENT PROCESSING
# =====================================================
ALLOWED_EXTENSIONS=.docx,.pdf,.txt,.md
EXTRACT_TABLES=true
PRESERVE_FORMATTING=true
TRACK_CHANGES=true

# =====================================================
# üíæ EXPORT CONFIGURATION
# =====================================================
EXPORT_FORMATS=docx,pdf,json,markdown
DEFAULT_EXPORT_FORMAT=docx
INCLUDE_REDLINES_BY_DEFAULT=true
INCLUDE_SUMMARY_BY_DEFAULT=true
EXPORT_CLEANUP_HOURS=24

# =====================================================
# üéõÔ∏è FEATURE FLAGS
# =====================================================
FEATURE_MULTI_MODE_COMPARISON=true
FEATURE_BATCH_PROCESSING=true
FEATURE_PATTERN_LEARNING=false
FEATURE_CUSTOM_RULES=false
FEATURE_WEBHOOK_NOTIFICATIONS=false

# =====================================================
# üóÑÔ∏è RULE ENGINE
# =====================================================
RULE_PATTERN_CACHE=true
RULE_PARALLEL_PROCESSING=true
RULE_BATCH_SIZE=10

# =====================================================
# NOTES:
# =====================================================
# 1. Replace OPENAI_API_KEY and ANTHROPIC_API_KEY with your actual keys
# 2. In Railway Dashboard: Variables ‚Üí Raw Editor ‚Üí Paste this file
# 3. Adjust ENFORCEMENT_LEVEL to: Bloody, Balanced, or Lenient
# 4. Set CORS_ORIGINS to your Vercel domain in production for security
