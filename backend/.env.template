REDIS_URL=

# Processing
MAX_PROCESSING_TIME=60
WORKER_CONCURRENCY=2

# Storage
STORAGE_PATH=./storage
RETENTION_DAYS=7

# Security
API_KEY=your-api-key-here
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Server Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
